<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml" styleClass="resPane">
  <columnConstraints>
    <ColumnConstraints percentWidth="100" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="16" />
    <RowConstraints percentHeight="8" />
    <RowConstraints percentHeight="8" />
    <RowConstraints percentHeight="8" />
    <RowConstraints percentHeight="8" />
    <RowConstraints percentHeight="8" />
    <RowConstraints percentHeight="8" />
    <RowConstraints percentHeight="8" />
  </rowConstraints>
  <children>
    <Label id="currentOption" 
    	   alignment="CENTER" 
    	   style="-fx-border-color: #ff7b7b; -fx-border-radius: 5; -fx-label-padding: 10; -fx-background-color: #ffbaba;
    	   -fx-border-style: solid; -fx-border-width: 5;" 		   
    	   text="Move" 
    	   GridPane.halignment="LEFT" 
    	   GridPane.valignment="CENTER"
    	   GridPane.rowIndex="0"
    	   GridPane.columnIndex="0" >
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
    </Label>
    <Button  id="moveOption"
             text="Move" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="1">
             <font>
                <Font size="18.0" />
             </font>
     </Button>
     <Button id="attackOption" 
             text="Attack" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="2">
             <font>
                <Font size="18.0" />
             </font>
      </Button>
      <Button id="displayOption" 
             text="Display" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="3">
             <font>
                <Font size="18.0" />
             </font>
      </Button>
      <Button id="commitOption" 
             text="Commit" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="4">
             <font>
                <Font size="18.0" />
             </font>
      </Button>
      <Button id="upgradeOption" 
             text="Upgrade" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="5">
             <font>
                <Font size="18.0" />
             </font>
      </Button>
      <Button id="increaseOption" 
             text="Increase" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="6">
             <font>
                <Font size="18.0" />
             </font>
      </Button>
      <Button id="switchOption" 
             text="Switch" 
             style="-fx-background-color: #dde6d5; -fx-border-style: solid; -fx-border-width: 5;
             -fx-border-color: #a3b899; -fx-label-padding: 8;" 
             GridPane.valignment="CENTER"
             GridPane.halignment="LEFT" 
             GridPane.columnIndex="0"  
             GridPane.rowIndex="7">
             <font>
                <Font size="18.0" />
             </font>
      </Button>
  </children>
</GridPane>

