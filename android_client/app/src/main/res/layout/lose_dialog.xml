<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/shape_rect_white"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Not that bad"
        android:textColor="@color/emerald_green"
        android:textSize="30dp"
        android:textStyle="bold"
        app:fontFamily="@font/artifika"/>

    <TextView
        android:id="@+id/tv_dialog_body_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Dialog body message."
        android:textSize="20dp"
        android:textStyle="bold"
        app:fontFamily="@font/artifika"/>

    <TextView
        android:id="@+id/tv_dialog_body_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="If you wish to stay and watch please commit. \n\nOtherwise please switch to another game."
        android:textSize="20dp"
        android:textStyle="bold"
        app:fontFamily="@font/artifika"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/cat_pizza" />

    <Button
        android:id="@+id/btn_dialog_ok"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_small_rect_emerald_green"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:fontFamily="@font/artifika" />

</LinearLayout>