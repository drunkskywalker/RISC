  <children>
    <fx:include source="/ui/attackGameOps.xml"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="0"
                  fx:id="gameOps"/>
    <fx:include source="/ui/myMap.xml"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="1"
                  fx:id="myMap"/>
    <fx:include source="/ui/attackOps.xml"
                  GridPane.rowIndex="0"
                  GridPane.columnIndex="2"
                  fx:id="attackOps"/>
  </children>
</GridPane>
