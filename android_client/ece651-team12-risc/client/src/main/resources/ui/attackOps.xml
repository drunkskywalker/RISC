<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml">
  <columnConstraints>
    <ColumnConstraints percentWidth="50" />
    <ColumnConstraints percentWidth="50" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="15" />
    <RowConstraints percentHeight="15" />
    <RowConstraints percentHeight="15" />
    <RowConstraints percentHeight="55" />
  </rowConstraints> 
  <children>
     <Label style="-fx-background-color: #fff519; -fx-border-style: dashed; -fx-label-padding: 5;" 
            text="Attack From Territory:" 
            GridPane.halignment="RIGHT"
            GridPane.valignment="BOTTOM"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0">
            <font>
               <Font size="18.0" />
            </font>
     </Label>
     <Label style="-fx-background-color: #fff519; -fx-border-style: dashed; -fx-label-padding: 5;" 
            text="Misty Mountains"
            GridPane.valignment="BOTTOM"
            GridPane.rowIndex="0" 
            GridPane.columnIndex="1">
        <font>
           <Font name="Candara Bold Italic" size="18.0" />
        </font>
     </Label>
     <Label style="-fx-background-color: #71c7ec; -fx-border-style: dashed; -fx-label-padding: 5;" 
     	    text="Select Enemey Territory: " 
     	    GridPane.halignment="RIGHT"
     	    GridPane.valignment="BOTTOM"
     	    GridPane.rowIndex="1" 
            GridPane.columnIndex="0">
            <font>
               <Font size="18.0" />
            </font>
      </Label>
      <Label style="-fx-background-color: #71c7ec; -fx-border-style: dashed; -fx-label-padding: 5;" 
             text="Lorien" 
             GridPane.valignment="BOTTOM"
             GridPane.rowIndex="1" 
             GridPane.columnIndex="1">
             <font>
               <Font name="Candara Bold Italic" size="18.0" />
             </font>
       </Label>
       <Label style="-fx-background-color: #e1c4ff; -fx-border-style: dashed; -fx-label-padding: 5;" 
     	    text="Enter attack units: " 
     	    GridPane.halignment="RIGHT"
     	    GridPane.valignment="BOTTOM"
     	    GridPane.rowIndex="2" 
            GridPane.columnIndex="0">
            <font>
               <Font size="18.0" />
            </font>
      </Label>
      <TextField style="-fx-background-color: e1c4ff; -fx-border-style: dashed; -fx-padding: 5;"
                 GridPane.valignment="BOTTOM"
                 GridPane.columnIndex="1" 
                 GridPane.rowIndex="2">
                 <font>
                     <Font size="18.0" />
                 </font>
                 <GridPane.margin>
                     <Insets>
                         <right>150</right>
                     </Insets>
                 </GridPane.margin>
       </TextField>
       <Button text="Cancel Attack" style="-fx-background-color: #dcedc1; -fx-border-style: solid; -fx-border-width: 5;
       -fx-border-color: #a8e6cf; -fx-label-padding: 5;" 
             GridPane.valignment="CENTER"
             GridPane.columnIndex="1"  
             GridPane.rowIndex="3">
             <GridPane.margin>
                <Insets>
                    <bottom>100</bottom>
                </Insets>
            </GridPane.margin>
             <font>
                <Font size="14.0" />
             </font>
      </Button>
  </children>
</GridPane>

